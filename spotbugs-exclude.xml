<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
  <!-- Suppress EI_EXPOSE_REP warnings - common in data transfer objects -->
  <Match>
    <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2" />
  </Match>
  
  <!-- Suppress uncalled private method warnings - often FXML event handlers -->
  <Match>
    <Bug pattern="UPM_UNCALLED_PRIVATE_METHOD" />
  </Match>
  
  <!-- Suppress case conversion warnings -->
  <Match>
    <Bug pattern="DM_CONVERT_CASE" />
  </Match>
  
  <!-- Suppress exception catch warnings for defensive programming -->
  <Match>
    <Bug pattern="REC_CATCH_EXCEPTION" />
  </Match>
  
  <!-- Suppress unsafe getResource warnings -->
  <Match>
    <Bug pattern="UI_INHERITANCE_UNSAFE_GETRESOURCE" />
  </Match>
  
  <!-- Suppress singleton expose warnings -->
  <Match>
    <Bug pattern="MS_EXPOSE_REP" />
  </Match>
  
  <!-- Suppress constructor method call warnings -->
  <Match>
    <Bug pattern="MC_OVERRIDABLE_METHOD_CALL_IN_CONSTRUCTOR" />
  </Match>
  
  <!-- Suppress constructor throw warnings -->
  <Match>
    <Bug pattern="CT_CONSTRUCTOR_THROW" />
  </Match>
  
  <!-- Suppress return value ignored for low-priority cases -->
  <Match>
    <Bug pattern="RV_RETURN_VALUE_IGNORED_BAD_PRACTICE" />
    <Priority value="3" />
  </Match>
  
  <!-- Suppress GC call warning -->
  <Match>
    <Bug pattern="DM_GC" />
  </Match>
  
  <!-- Suppress integer cast warnings -->
  <Match>
    <Bug pattern="ICAST_INTEGER_MULTIPLY_CAST_TO_LONG" />
  </Match>
  
  <!-- Suppress might ignore exception -->
  <Match>
    <Bug pattern="DE_MIGHT_IGNORE" />
  </Match>
</FindBugsFilter>
